* {
	font-size: 12px;
	color: #9ca6b7;
	font-weight: 500;
	font-family: "JetBrainsMono NFP";
	margin: 0;
	padding: 0;
}

.yasb-bar {
	padding: 0;
	margin: 0;
}

.widget {
	padding: 0 8px;
	margin: 0 4px;
	border-radius: 6px;
}

.widget .icon {
	font-size: 18px;
}

.win-btn {
	background-color: #F3BF7D;
}

.win-btn .icon {
	color: #243446;
}

.komorebi-workspaces {
	background-color: #243446;
}

.komorebi-workspaces .offline-status {
	color: #627199;
	font-size: 12px;
	padding: 0 4px;
	font-weight: 600;
}

.komorebi-workspaces .ws-btn {
	border: none;
	background-color: #9ca6b7;
	margin: 0px 4px;
	padding: 0;
	color: rgba(0, 0, 0, 0);
	border-radius: 5px;
	height: 10px;
	width: 10px;
}

.komorebi-workspaces .ws-btn:hover {
	background-color: #91b2e7;
}

.komorebi-workspaces .ws-btn.populated {
	background-color: #8E6C6F;
}

.komorebi-workspaces .ws-btn.active {
	color: rgba(149, 177, 255, 0);
	background-color: #BC8172;
	width: 36px;
	height: 10px;
	border-radius: 5px;
}

.traffic-widget {
	background-color: #E4896F;
	padding: 0;
}

.traffic-widget .icon {
	color: #243446;
	padding-right: 6px;
	padding-left: 6px;
}

.traffic-widget .label {
	background-color: #243446;
	margin: 1px;
	border-radius: 6px;
	padding: 0 6px;
	color: #9ecfd7;
}

.clock-widget {
	background-color: #BC8172;
	padding: 0;
}

.clock-widget .icon {
	color: #243446;
	padding: 0 6px;
}

.clock-widget .label {
	background-color: #243446;
	color: #c2a8e3;
	padding: 0 6px;
	margin: 1px;
	border-radius: 6px;
}

.volume-widget {
	background-color: #8E6C6F;
	padding: 0;
}

.volume-widget .icon {
	color: #243446;
	padding: 0 6px;
}

.volume-widget .label {
	background-color: #243446;
	color: #f38ba8;
	padding: 0 8px;
	margin: 1px;
	border-radius: 6px;
}

.weather-widget {
	background-color: #E4896F;
	padding: 0;
}

.weather-widget .icon {
	color: #243446;
	padding: 0 6px;
}

.weather-widget .label {
	background-color: #243446;
	color: #9ecfd7;
	padding: 0 6px;
	margin: 1px;
	border-radius: 6px;
}

.power-menu-widget {
	background-color: #BC8172;
	padding: 0;
}

.power-menu-widget .label {
	color: #243446;
	padding: 0 8px;
	font-weight: bold;
	font-size: 14px;
}

.language-widget {
	background-color: #C67D6E;
	padding: 0;
}

.language-widget .icon {
	color: #243446;
	padding: 0 6px;
}

.language-widget .label {
	background-color: #243446;
	color: #f5c276;
	padding: 0 8px;
	margin: 1px;
	border-radius: 6px;
}

.taskbar-widget {
	background-color: #243446;
	padding: 0;
}

.taskbar-widget .app-icon {
	padding: 0 8px;
	border: none;
	margin: 0;
}

.active-window-widget {
	background-color: #BC8172;
	padding: 0;
}

.active-window-widget .label {
	color: #BC8172;
	background-color: #243446;
	padding: 0 8px;
	margin: 1px;
	border-radius: 6px;
}

.active-window-widget .icon {
	padding: 0 8px;
	border: none;
	margin: 0;
	background-color: #c6a7e8;
}

/*POWER MENU POPUP*/
.uptime {
	font-size: 14px;
	margin-bottom: 10px;
	color: rgba(191, 202, 219, 0.726);
	font-weight: 600;
}

.power-menu-popup {
	background-color: rgba(24, 24, 37, 0);
	border-radius: 12px;

}

.power-menu-popup .button {
	padding: 0;
	width: 180px;
	height: 230px;
	border-radius: 8px;
	background-color: #BC8172;
	color: #c2a7e2;
	border: 8px solid #1b1925;
	margin: 0px;
}

.power-menu-popup .button.hover {
	background-color: #243446;
}

.power-menu-popup .button .label {
	margin-bottom: 8px;
	font-size: 16px;
	font-weight: 500;
	color: #BC8172;

}

.power-menu-popup .button .icon {
	font-size: 64px;
	padding-top: 32px;
	color: #BC8172;
}

.power-menu-popup .button.cancel .icon {
	padding: 0;
	margin: 0;
}

.power-menu-popup .button.cancel .label {
	margin: 0;
}

.power-menu-popup .button.cancel {
	height: 32px;
	border-radius: 4px;
	border: none;
	background-color: #221f2e;
}

.power-menu-popup .button.cancel:hover {
	background-color: #1b1925;
}

.wallpapers-widget {
	background-color: #ff7777;
	padding: 0;
}

.wallpapers-widget .icon {
	color: #ffffff;
	padding: 0 6px;
}

.wallpapers-widget .label {
	background-color: #221f2e;
	color: #f38ba8;
	padding: 0 8px;
	margin: 1px;
	border-radius: 6px;
}

.wallpapers-gallery-window {
	background-color: rgba(190, 169, 169, 0.01);
	border: 0;
	margin: 0;
}

.wallpapers-gallery-buttons {
	background-color: rgba(255, 255, 255, 0);
	color: white;
	border: none;
	font-size: 14px;
	padding: 8px 0;
	border-radius: 8px;
	margin: 0 8px 8px 8px;
	width: 600px;
}

.wallpapers-gallery-buttons:hover {
	background-color: rgba(255, 255, 255, 0.1)
}

.wallpapers-gallery-image {
	border: 4px solid transparent;
	border-radius: 10px;
}

.wallpapers-gallery-image:hover {
	border: 4px solid rgb(66, 68, 83);
}

.wallpapers-gallery-image.focused {
	border: 4px solid #ffffff;
}
